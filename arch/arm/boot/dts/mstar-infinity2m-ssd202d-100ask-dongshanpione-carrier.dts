/dts-v1/;
#include "mstar-infinity2m-ssd202d-100ask-dongshanpione.dts"

#include <dt-bindings/gpio/gpio.h>

/ {
	model = "DongShanPi One + Carrier";

	vcc_ext_5v: reg_ext_5v {
		compatible = "regulator-fixed";
		regulator-name = "vcc_ext_5v";
		regulator-type = "voltage";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpios = <&gpio SSD20XD_GPIO_GPIO85 0>;
		enable-active-high;
		regulator-always-on;
		//regulator-boot-on;
	};

	vcc_ext_3v3: reg_ext_3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc_ext_3v3";
		regulator-type = "voltage";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		//vin-suppy = <&vcc_ext_5v>;
	};
};


&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_mode1_pins>, <&pm_led_mode1_pins>;
	status = "okay";
};

&bach {
	status = "okay";
};

&mspi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_mode5_pins>;
	status = "okay";
#if 0	
	spidev0: spi@0 {
        compatible = "lwn,bk4";
        spi-max-frequency = <1000000>;
        reg = <0>;
	};
#endif
	display@0{
		compatible = "adafruit,yx240qv29", "ilitek,ili9341";
		reg = <0>;
		spi-max-frequency = <1000000>;
		dc-gpios = <&gpio SSD20XD_GPIO_UART0_TX GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio SSD20XD_GPIO_UART0_RX GPIO_ACTIVE_HIGH>;
		vcc-supply = <&vcc_ext_3v3>;
	};
};
